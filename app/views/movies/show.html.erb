<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <%= link_to 'Back to All Movies', movies_path, class: 'pull-right' %>
    <%= render 'shared/content_title', title: @movie.title %>
    <div class="well">
      <div class="row">
        <div class="col-md-3">
          <%= link_to image_tag(@movie.image_url(:thumb)), movie_path(@movie) if @movie.image? %>
        </div>
        <div class="col-md-9">
          <h4>
            <%= @movie.title %>
            <small>
              Dir.
              <%= @movie.director %> |
              <%= @movie.runtime_in_minutes %> min |
              <%= @movie.review_average || 0 %>/10
            </small>
          </h4>
          <p><%= @movie.description %></p>
          <h5><%= formatted_date(@movie.release_date) %></h5>
          <p class="pull-right">
            <%= link_to 'Edit', edit_movie_path(@movie), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Delete', movie_path(@movie), class: 'btn btn-danger btn-sm', method: 'delete', data: {confirm: 'Are you sure?'} %>
          </p>
        </div>
      </div>
    </div>

    <% if current_user %>
      <%= render 'reviews/list', reviews: @movie.reviews %>
    <% else %>
      <p>Please <%= link_to "Log In", login_path, class: 'btn btn-default btn-xs' %> to see reviews and add your own.</p>
    <% end %>
  </div>
  <div class="col-md-2"></div>
  </div>
</div>
