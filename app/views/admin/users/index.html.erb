<h1>Rotten Mangoes</h1>
<%= link_to "Create an user!", new_movie_path %>
<hr>
<table>
  <tr>
    <th></th>
    <th>Full Name</th>
    <th>Email</th>
    <th>Register Time</th>
    <th>Admin</th>
  </tr>
  <%= paginate @users %>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to 'edit', edit_admin_user_path(user) %>,
          <%= link_to 'delete', admin_user_path(user), method: 'delete' %></td>
      <td><%= link_to user.full_name, admin_user_path(user) %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at %></td>
      <td><%= "Admin" if user.admin? %></td>
    </tr>
  <% end %>
</table>
