<div class="well">
  <%= link_to 'Create User', new_movie_path, class: 'btn btn-success', style: 'float:right;' %>
  <table class='table table-striped table-hover'>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Register Time</th>
      <th>Admin</th>
      <th></th>
    </tr>
    <%= paginate @users %>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, admin_user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>
        <td><%= "Admin" if user.admin? %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-default btn-sm' %>
            <%= link_to 'Delete', admin_user_path(user), method: 'delete', class: 'btn btn-default btn-sm' %></td>
      </tr>
    <% end %>
  </table>
</div>
