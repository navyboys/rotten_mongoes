<!-- Brand and toggle get grouped for better mobile display -->
<div class="navbar-header">
  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
    <span class="sr-only">Toggle navigation</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>
  <%= link_to 'Rotten Mangoes', root_path, class: 'navbar-brand' %>
</div>

<!-- Collect the nav links, forms, and other content for toggling -->
<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
  <ul class="nav navbar-nav">
    <li class="active"><%= link_to 'Movies', movies_path %></li>
    <li><%= link_to 'TVs', '#' %></li>
    <li><%= link_to 'Showtimes', '#' %></li>
  </ul>

  <div class="navbar-right">
    <% if current_user %>
      <div class="dropdown">
        <%= link_to('', class: 'btn btn-default navbar-btn dropdown-toggle', 'data-toggle' => 'dropdown') do %>
          <%= current_user.firstname %>
          <span class='caret'></span>
        <% end %>
        <ul class='dropdown-menu'>
          <li>
            <%= link_to user_path(current_user) do %>
              <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
              View Profile
            <% end %>
          </li>
          <li role="separator" class="divider"></li>
          <% if current_user.admin? %>
            <li>
              <%= link_to admin_users_path do %>
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                User Management
              <% end %>
            </li>
          <% end %>
          <li role="separator" class="divider"></li>
          <li>
            <%= link_to logout_path do %>
              <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
              Log Out
            <% end %>
          </li>
        </ul>
      </div>
    <% else %>
      <%= link_to 'Sign Up', register_path, class: "btn btn-success navbar-btn" %>
      <%= link_to 'Log In', login_path, class: "btn btn-default navbar-btn" %>
    <% end %>
  </div>
</div>
