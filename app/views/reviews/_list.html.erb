<div class="well">
  <h3>Reviews</h3>
  <hr>
    <% reviews.each do |review| %>
      <p>
        <%= review.text %>
        (<%= review.rating_out_of_ten %>/10)
        <% if params[:controller] == 'movies' %>
          <small>- by <%= link_to review.user.full_name, user_path(review.user) %></small>
        <% elsif params[:controller] == 'users' %>
          <small>- on <%= link_to review.movie.title, movie_path(review.movie) if review.movie %></small>
        <% end %>
      </p>
      <hr>
    <% end %>
    <% if params[:controller] == 'movies' %>
      <p><%= link_to "Write Review", new_movie_review_path(@movie), class: 'btn btn-success btn-xs' %></p>
    <% end %>
</div>
